<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/placeholder_book_icon"
        android:layout_marginTop="16dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/userEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="example@useremail.com"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="@color/light_primary"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_primary"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <LinearLayout
        android:id="@+id/profile_settings_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_margin="8dp"
        tools:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_settings"
            android:textColor="@color/light_primary_variant"
            android:textSize="18sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/light_primary"
            android:layout_marginTop="4dp"
            />
        <TextView
            android:id="@+id/change_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_e_mail"
            android:textSize="16sp"
            android:textColor="@color/light_primary"
            android:layout_margin="4dp"
            app:drawableEndCompat="@drawable/ic_action_arrow" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/light_primary"
            />

        <TextView
            android:id="@+id/change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_password"
            android:textSize="16sp"
            android:textColor="@color/light_primary"
            android:layout_margin="4dp"
            app:drawableEndCompat="@drawable/ic_action_arrow" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/light_primary"
            />

        <TextView
            android:id="@+id/reset_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reset_password"
            android:textSize="16sp"
            android:textColor="@color/light_primary"
            android:layout_margin="4dp"
            app:drawableEndCompat="@drawable/ic_action_arrow" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/light_primary"
            />

        <TextView
            android:id="@+id/change_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/theme"
            android:textSize="16sp"
            android:textColor="@color/light_primary"
            android:layout_margin="4dp"
            app:drawableEndCompat="@drawable/ic_action_arrow" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/light_primary"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_settings_anonymous"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_settings"
            android:textColor="@color/light_primary_variant"
            android:textSize="18sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/light_primary"
            android:layout_marginTop="4dp"
            />
        <TextView
            android:id="@+id/change_theme_anonymous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/theme"
            android:textSize="16sp"
            android:textColor="@color/light_primary"
            android:layout_margin="4dp"
            app:drawableEndCompat="@drawable/ic_action_arrow" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/light_primary"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/about_app"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/action_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about"
            android:textColor="@color/light_primary_variant"
            android:textSize="18sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/light_primary"
            android:layout_marginTop="4dp"
            />
        <TextView
            android:id="@+id/action_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/privacy_policy"
            android:textColor="@color/light_primary_variant"
            android:textSize="18sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/light_primary"
            android:layout_marginTop="4dp"
            />

    </LinearLayout>

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="?android:attr/progressBarStyleSmall"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/sign_out_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/sign_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/sign_out"
            android:textSize="14sp"
            android:textColor="@color/light_primary"
            app:drawableTopCompat="@drawable/ic_sign_out"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/register"
            android:textSize="14sp"
            android:textColor="@color/light_primary"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:drawableEndCompat="@drawable/ic_register_account"
            android:drawablePadding="4dp"
            />

        <TextView
            android:id="@+id/sign_in_another_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/sign_in_with_another_account"
            android:textSize="14sp"
            android:textColor="@color/light_primary"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:drawableEndCompat="@drawable/ic_switch_account"
            android:drawablePadding="4dp"
            />

    </LinearLayout>


</LinearLayout>